puts "========"
puts "OCC28211"
puts "========"
puts ""
#################################################
# Modeling Algorithms - Boolean fuse operation produces incorrect result
#################################################

# The classified face is based on the sphere and seems to be valid.
# Check "-na" option for "b2dclassifx"-DRAW-command.

pcylinder rr 3 5
explode rr f
copy rr_1 result

point p1 0 2
point p2 -2*pi 2

if { ![regexp {ON} [ b2dclassifx result p1 ] ] } {
    puts "Error : Wrong result of 2d classifier algorithm"
} else {
    puts "OK : Good result of 2d classifier algorithm"
}

if { ![regexp {ON} [ b2dclassifx result p1 -na ] ] } {
    puts "Error : Wrong result of 2d classifier algorithm"
} else {
    puts "OK : Good result of 2d classifier algorithm"
}

if { ![regexp {ON} [ b2dclassifx result p2 ] ] } {
    puts "Error : Wrong result of 2d classifier algorithm"
} else {
    puts "OK : Good result of 2d classifier algorithm"
}

if { ![regexp {OUT} [ b2dclassify result p2 -na ] ] } {
    puts "Error : Wrong result of 2d classifier algorithm"
} else {
    puts "OK : Good result of 2d classifier algorithm"
}

v2d
2dclear
display p1 p2
pcurve result
2dfit

checkview -screenshot -2d -path ${imagedir}/${test_image}_2d.png
