puts "================"
puts "OCC538"
puts "================"
puts ""

restore [locate_data_file OCC538.brep] result 
checkshape result

puts [tolerance result]

point pp 0.2453959532714904 -1.246869357124329

if { ![regexp {ON} [ b2dclassifx result pp] ] } {
    puts "Error : Wrong result of 2d classifier algorithm"
} else {
    puts "OK : Good result of 2d classifier algorithm"
}

if { ![regexp {ON} [ b2dclassify result pp] ] } {
    puts "Error : Wrong result of 2d classifier algorithm"
} else {
    puts "OK : Good result of 2d classifier algorithm"
}

if { ![regexp {IN} [ b2dclassifx result pp -t 1.0e-7] ] } {
    puts "Error : Wrong result of 2d classifier algorithm"
} else {
    puts "OK : Good result of 2d classifier algorithm"
}

if { ![regexp {IN} [ b2dclassify result pp -t 1.0e-7] ] } {
    puts "Error : Wrong result of 2d classifier algorithm"
} else {
    puts "OK : Good result of 2d classifier algorithm"
}

v2d
2dclear
display pp
pcurve result
2dfit

checkview -screenshot -2d -path ${imagedir}/${test_image}_2d.png
