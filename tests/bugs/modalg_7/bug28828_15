puts "========"
puts "OCC28828"
puts "========"
puts ""
############################################################
# New functionalities of BRepFilletAPI_MakeChamfer algorithm
############################################################

#non-KPart: cylinder + plane (intersection is line), symmetrical throat
pcylinder a1 10 50
box a2 -20 -20 -20  25 40 40
bfuse b a1 a2
donly b

explode b e
donly b b_4

chamf_throat result b b_4 2.

checkshape result

checknbshapes result -solid 1 -shell 1 -face 10 -wire 10 -edge 26 -vertex 18 -shape 67

set tolres [checkmaxtol result]

if { ${tolres} > 0.0001} {
   puts "Error: bad tolerance of result"
}

checkprops result -v 50822.7
