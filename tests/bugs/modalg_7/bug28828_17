puts "========"
puts "OCC28828"
puts "========"
puts ""
############################################################
# New functionalities of BRepFilletAPI_MakeChamfer algorithm
############################################################

#KPart: cone + plane, symmetrical throat
pcone a1 10 30 50
box a2 -25 -25 -20  50 50 40
bfuse b a1 a2
donly b

explode b e
donly b b_3

chamf_throat result b b_3 3.

checkshape result

checknbshapes result -solid 1 -shell 1 -face 9 -wire 10 -edge 17 -vertex 11 -shape 50

set tolres [checkmaxtol result]

if { ${tolres} > 1.001e-7} {
   puts "Error: bad tolerance of result"
}

checkprops result -v 156170
