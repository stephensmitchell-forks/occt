puts ""
############################################################
# New functionalities of BRepFilletAPI_MakeChamfer algorithm
############################################################

#KPart: cone + plane, penetrating throat
pcone a1 10 30 50
box a2 -25 -25 -20  50 50 40
bfuse b a1 a2
donly b

explode b f
explode b_2 e
donly b b_2_2

chamf_throat_with_penetration result b b_2_2 b_2 3. 6.

checkshape result

checknbshapes result -solid 1 -shell 1 -face 9 -wire 10 -edge 17 -vertex 11 -shape 50

set tolres [checkmaxtol result]

if { ${tolres} > 1.001e-7} {
   puts "Error: bad tolerance of result"
}

checkprops result -v 156442
