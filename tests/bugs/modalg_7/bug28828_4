puts "========"
puts "OCC28828"
puts "========"
puts ""
############################################################
# New functionalities of BRepFilletAPI_MakeChamfer algorithm
############################################################

pcylinder a1 10 50
plane pp 25 0 0  -1 0 0
pcylinder a2 pp 15 50
bfuse b a1 a2
donly b
explode b e
donly b b_3

chamf_throat result b b_3 1.

checkshape result

checknbshapes result -solid 1 -shell 1 -face 6 -wire 7 -edge 8 -vertex 5 -shape 29

set tolres [checkmaxtol result]

if { ${tolres} > 0.0002} {
   puts "Error: bad tolerance of result"
}

checkprops result -v 46726.9
