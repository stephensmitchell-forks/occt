puts "========"
puts "OCC28828"
puts "========"
puts ""
############################################################
# New functionalities of BRepFilletAPI_MakeChamfer algorithm
############################################################

pcylinder a1 10 50
box a2 -20 -20 -20  40 40 40
nurbsconvert ba2 a2
bfuse b a1 ba2
donly b
explode b e
donly b b_4 b_1

chamf_throat result b  b_4 2.  b_1 1.

checkshape result

checknbshapes result -solid 1 -shell 1 -face 10 -wire 11 -edge 19 -vertex 12 -shape 55

set tolres [checkmaxtol result]

if { ${tolres} > 0.00014} {
   puts "Error: bad tolerance of result"
}

checkprops result -v 73669.4
